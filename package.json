{
  "name": "niljs",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NilFoundation/nil.js.git"
  },
  "homepage": "https://github.com/NilFoundation/nil.js.git#README.md",
  "bugs": "https://github.com/NilFoundation/nil.js/issues",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/niljs.cjs.cjs",
  "module": "dist/niljs.esm.js",
  "files": [
    "dist"
  ],
  "types": "dist/niljs.d.ts",
  "exports": {
    ".": {
      "import": "./dist/niljs.esm.js",
      "require": "./dist/niljs.cjs.js"
    }
  },
  "description": "Typescript library to interact with the Nil blockchain. Can be used in the browser or in Node.js.",
  "scripts": {
    "test": "vitest -c ./test/vitest.config.ts",
    "test:ci": "CI=true vitest -c ./test/vitest.config.ts",
    "build": "rimraf dist && rollup -c ./rollup/rollup.config.js --bundleConfigAsCjs",
    "prepare": "npx simple-git-hooks",
    "format": "biome format .",
    "lint": "biome check .",
    "biome:fix": "biome check --apply .",
    "changeset": "changeset",
    "changeset:publish": "npm run build && changeset publish"
  },
  "license": "MIT",
  "peerDependencies": {
    "@noble/curves": ">=1.4.0 <1.5.0",
    "@open-rpc/client-js": ">=1.8.1 <1.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/elliptic": "^6.4.18",
    "elliptic": "^6.5.5",
    "rimraf": "^5.0.7",
    "rollup": "^4.17.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-filesize": "^10.0.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint",
    "pre-push": "npm run format",
    "commit-msg": "npx --no-install commitlint --edit $1",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "dependencies": {
    "@chainsafe/ssz": "^0.16.0",
    "tiny-invariant": "^1.3.3"
  },
  "keywords": [
    "nil",
    "blockchain",
    "client"
  ]
}
